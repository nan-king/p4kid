/* pages/main.wxss */
page{
  height: 100%;
  overflow:hidden;
}
.root{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  overflow:hidden;
}
.header{
  height:910rpx;
  width:750rpx;
  flex-grow:0;
  overflow:hidden;
}
movable-area{
  height:100%;
  width:100%;
  position:absolute;left:0;top:0;
  pointer-events: none;
}
movable-view {
  width:60%;
  pointer-events: auto;
}
.header video{
  width:100%;height:80rpx;
  padding:-20rpx;
  margin-top:-10rpx;
  margin-bottom:-10rpx;
}
.header .controls{
  margin-top:-20rpx;
  font-size:20rpx;
  line-height:40rpx;
  height:40rpx;
}
scroll-view{
  width:100%;
  overflow: scroll;
  flex-grow:1;
}

rich-text{
  font-size: 16pt;
  color:#aaaaaa;
  background: #ffeeee;
  border-bottom:20px solid yellow;
}
.selected{
  color:rgb(119, 0, 255);
  font-weight: bold;
}
.next{
  color:#000000;
}
.pre{
  color:#666666;
}
.keywords{
  position:absolute;
  background:rgba(255,255,255, 0.5);
  width:100%;
  color:#fffb00;
}