/* pages/main.wxss */
page{
  height: 100%;
  overflow:hidden;
}
.root{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  overflow:hidden;
}
.header{
  height:910rpx;
  width:750rpx;
  flex-grow:0;
  overflow:hidden;
}
.header video{
  width:100%;height:80rpx;
  padding:-20rpx;
  margin-top:-10rpx;
  margin-bottom:-10rpx;
}
.header .controls{
  margin-top:-20rpx;
  font-size:20rpx;
  line-height:40rpx;
  height:40rpx;
}
scroll-view{
  width:97%;
  overflow: scroll;
  padding:2%;
  flex-grow:1;
}

rich-text{
  font-size: 16pt;
  color:#aaaaaa;
  background: #ffeeee;
  border-bottom:20px solid yellow;
}
.selected{
  color:rgb(119, 0, 255);
  font-weight: bold;
}
.next{
  color:#000000;
}
.pre{
  color:#666666;
}
.fanyi:last-child{
  font-size:10pt;
  opacity: 0.5;
}